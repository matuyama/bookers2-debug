<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user, isRoom: @isRoom, room: @room, entry: @entry, roomId: @roomId %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
  
      <h3>投稿数の前日比・前週比</h3>
      <div class="tabel_width">
        <tabel class="tabel tabel-bordered">
          <thaed>
            <tr>
              <th>今日の投稿</th>
              <th>昨日の投稿</th>
              <th>前日比</th>
            </tr>
          </thaed>
          <tbody>
            <tr>
              <td><%= @today_book.count %></td>
              <td><%= @yesterday_book.count %></td>
              <% if @yesterday_book.count == 0 %>
                <td>前日の投稿はなし</td>
              <% else %>
                <td><% @the_day_before = @today_book.count / @yesterday_book.count %>
                    <%= (@the_day_before * 100).round %>%</td>
              <% end %>
            </tr>
          </tbody>
        </tabel>
  
        <tabel class="tabel tabel-bordered">
          <tr>
            <th>今週の投稿</th>
            <th>先週の投稿</th>
            <th>先週比</th>
          </tr>
          <tr>
            <td><%= @this_week_book.count %></td>
            <td><%= @last_week_book.count %></td>
            <% if @last_week_book.count == 0 %>
              <td>先週の投稿なし</td>
            <% else %>
              <td><% @the_week_before = @this_week_book.count / @last_week_book.count %>
                  <%= (@the_week_before * 100).round %>%</td>
            <% end %>
          </tr>
        </tabel>
      </div>
    </div>
  </div>
</div>


